{
  "manifest_version": 2,

  "name": "My Chrome Extension with React",
  "description": "Basic Chrome Extension with React",
  "version": "1.0.0",

  "icons": {
    "192": "logo192.png"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["/static/css/extension.css"]
    }
  ],

  "browser_action": {},

  "permissions": ["activeTab"]
}
